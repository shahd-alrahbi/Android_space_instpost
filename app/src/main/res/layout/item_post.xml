<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#373737">

    <TextView
        android:id="@+id/text1"
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/palette"
        android:text="Space"
        android:textSize="35dp"
        android:textStyle="italic"
        android:paddingLeft="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/design_default_color_background" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="66dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shapeimage"
        android:scrollbarStyle="outsideInset"
        android:src="@drawable/businessman"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:drawableRight="@drawable/dots"
        android:paddingLeft="10dp"
        android:text="Yashwant Singh Chouhan"
        android:textColor="@color/design_default_color_background"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/text1" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/D"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:src="@drawable/er" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ss"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/white"
            android:padding="4dp"
            android:src="@drawable/heart" />

        <ImageView
            android:id="@+id/ff"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/white"
            android:padding="4dp"
            android:src="@drawable/comment" />
        <ImageView
            android:id="@+id/rt"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/white"
            android:padding="4dp"
            android:src="@drawable/send" />


        <ImageView
            android:id="@+id/bb"
            android:layout_marginLeft="250dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/white"
            android:padding="4dp"
            android:src="@drawable/bookmark" />
    </LinearLayout>

    <TextView
        android:id="@+id/views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:paddingStart="10dp"
        android:textColor="@color/design_default_color_on_primary"
        app:layout_constraintTop_toBottomOf="@id/layout2"
        app:layout_constraintStart_toStartOf="parent"
        android:text="20.178 views"/>



</androidx.constraintlayout.widget.ConstraintLayout>

